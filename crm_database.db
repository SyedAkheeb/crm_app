import sqlite3

def initialize_database():
    conn = sqlite3.connect('crm_database.db')
    cursor = conn.cursor()
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS leads (
            id INTEGER PRIMARY KEY,
            name TEXT,
            status TEXT,
            created_at TEXT,
            email TEXT,
            phone TEXT,
            source TEXT
        )
    ''')
    conn.commit()
    conn.close()

initialize_database()
print("Database initialized successfully.")